# Streamlit Secrets Configuration Template
# ===================================
# This is a SAMPLE configuration file. Copy this to secrets.toml and replace
# the placeholder values with your actual API keys and configuration.
#
# IMPORTANT: Never commit your actual secrets.toml file to version control!
# Add it to .gitignore and only use this sample as a template.
#
# To use this file:
# 1. Copy this file to secrets.toml
# 2. Replace all placeholder values with your actual credentials
# 3. Ensure secrets.toml is in your .gitignore file

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
openai_api_key = "your_openai_api_key_here"

# Google Gemini Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
google_api_key = "your_google_api_key_here"

# MongoDB Configuration
# Get your connection string from MongoDB Atlas or your MongoDB instance
mongodb_uri = "your_mongodb_connection_string_here"

# LangSmith Configuration (Optional)
# Get your API key from: https://smith.langchain.com/
langsmith_api_key = "your_langsmith_api_key_here"
langsmith_tracing = true
langsmith_endpoint = "https://api.smith.langchain.com"
langsmith_project = "your_project_name_here"

# Default Settings
default_ai_provider = "openai"  # Options: "openai", "gemini"
default_ai_model = "gpt-4o-mini"  # Choose from available models below

# Available Models Configuration
openai_models = ["gpt-3.5-turbo", "gpt-4", "gpt-4-turbo", "gpt-4o", "gpt-4o-mini"]
gemini_models = ["gemini-2.0-flash-lite", "gemini-pro-vision", "gemini-1.5-flash", "gemini-1.5-pro"]

# App Configuration
app_title = "Expense Tracker"
